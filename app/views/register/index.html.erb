<!doctype html>
<html lang="en">
<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-uWxY/CJNBR+1zjPWmfnSnVxwRheevXITnMqoEIeG1LJrdI0GlVs/9cVSyPYXdcSF" crossorigin="anonymous">

  <title>UniPoint</title>

  <%= stylesheet_link_tag 'login', media: 'all', 'data-turbolinks-track': 'reload' %>
  <style>
      #footer{
          background-image: url("logo.png");
          background-repeat: repeat;
          position:absolute;
          bottom:0;
          height: 5em;
          width: 93%;

          /*background-color: red;*/
      }
  </style>
</head>
<body style="background-color: #060A39">

<div class="container">
  <div class="row" style="background-color: white; height: 50%; border-radius: 20px; margin-top: 4em; margin-bottom: 4em">
    <div class="col-md-2"></div>
    <div class="col" style="text-align: center; padding: 2em">
      <%= image_tag('logo.png', size: "100") %> <br/>
      <h3>Crie sua conta</h3>
      <form method="post" action="/register/">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <div class="d-grid" style="margin-top: 2em">
          <div class="form-floating mb-3">
            <input type="file" id="user_avatar" name="user[avatar]" />
          </div>
          <div class="form-floating mb-3">
            <input type="text" name="email" class="form-control" id="floatingInput" placeholder="name@example.com">
            <label for="floatingInput">Matrícula</label>
          </div>
          <div class="form-floating mb-3">
            <input type="email" name="email" class="form-control" id="floatingInput" placeholder="name@example.com">
            <label for="floatingInput">Email</label>
          </div>
          <div class="form-floating mb-3">
            <input type="password" name="senha" class="form-control" id="floatingPassword" placeholder="Senha">
            <label for="floatingPassword">Senha</label>
          </div>
          <div class="form-floating mb-3">
            <input type="password" name="conf-senha" class="form-control" id="floatingPassword" placeholder="Confirme a sua senha">
            <label for="floatingPassword">Comfirme a senha</label>
          </div>
          <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
            <option selected>Tipo de usuário</option>
            <option value="1">Aluno</option>
            <option value="2">Professor</option>
            <option value="3">Funcionário</option>
          </select>
          <br/>
          <button class="btn btn-lg" type="submit" style="background-color: #060A39; color: white" href="#">Registrar</button>
          <div class="col" style="margin-top: 1em; align-items: flex-end">
            <a>Já tem uma conta? <a style="color: #060A39" href="/login/index">Faça o login aqui</a> </a>
          </div>
          <div class="col">
            <div style="text-align: center;">
              <%
                if @resposta != ''
              %>
                <p style="color: red;"><%=@resposta %></p>
              <%
                end
                @resposta = ''
              %>
            </div>
          </div>
        </div>
      </form>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>
<!-- Optional JavaScript; choose one of the two! -->

<!-- Option 1: Bootstrap Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-kQtW33rZJAHjgefvhyyzcGF3C5TFyBQBA13V1RKPf4uH+bwyzQxZ6CmMZHmNBEfJ" crossorigin="anonymous"></script>

